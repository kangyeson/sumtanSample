<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag_my_user"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#E7E7E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#DDDDDD"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mypage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/mypage_secession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원탈퇴"
                android:textColor="#958282"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/setting_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onClick"
                android:background="@drawable/ic_baseline_settings_24"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E7E7E7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mypage_button"
        android:weightSum="2">

        <Button
            android:id="@+id/mypage_management"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:text="이력서 관리"
            android:layout_weight="1"
            android:background="#00FF0000"
            />

        <Button
            android:id="@+id/mypage_lookup"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:text="지원한 재능기부"
            android:layout_weight="1"
            android:background="#00FF0000"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E7E7E7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/my_fragment_page"
        android:orientation="vertical"/>


</LinearLayout>